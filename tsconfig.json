{
  "compilerOptions": {
    "target": "es6",
    "esModuleInterop": true,
    "module": "commonjs",
    "lib": ["ES2016", "DOM"],
    "baseUrl": ".",
    "rootDir": ".",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "moduleResolution": "Node",
    "jsx": "react-jsx",
  },
  "include": ["./**/*", "./@type/index.d.ts" ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}